#Ejercicio 3
Nombre = input ("Por favor ingrese su nombre: ")
Apellido = input ("Por favor ingrese si apellido: ")
Edad = input ("Por favor ingrese su edad: ")
Residencia = input ("Por favor ingrese su residencia: ")
print (f"Soy {Nombre} {Apellido}, tengo {Edad} años y vivo en {Residencia}.")

#Ejercicio 4 
import math
radio = float(input("Ingrese el radio del circulo: "))


area = math.pi * (radio ** 2)
perimetro = 2 * math.pi * radio


print (f"El area del circulo es:{area}")

#Ejercicio 5
segundo = int(input("Ingrese la cantidad de segundos: "))
porcetaje = (segundo/3600*100)
print(f"Los segundos {segundo}, en procentaje a una hora equivale a: {porcetaje}%")

#Ejercicio 6 
numero = int(input("Ingrese un número: "))
print(f"Tabla de multiplicar del {numero}:")
for i in range(1, 11):
    resultado = numero * i
    print(f"{numero} x {i} = {resultado}")

#Ejercicio 7
numero1 = int(input("Ingrese el primero numero entero (distinto de 0):"))
numero2 = int(input("Ingrese el segundo numero entero(distinto de 0)"))

if numero1 == 0 or numero2 == 0:
    print("Error: Los numero deben ser distintos de 0.")
else:
    suma = numero1 + numero2
    resta = numero1 - numero2
    multiplicacion = numero1 * numero2
    division = numero1 / numero2

print (f"La suma de {numero1} y {numero2} es: {suma}")
print (f"La resta de {numero1} y {numero2} es: {resta}")
print (f"La multiplicacion de {numero1} y {numero2} es: {multiplicacion}")
print (f"La diviasion de {numero1} y {numero2} es: {division}")

#Ejercicio 8
Peso= float(input("Ingrese su peso:"))
Altura= float(input("Ingrese su altura:"))

IMC = Peso / (Altura ** 2)

print (F"Su indice de masa corporal es de: {IMC:.2f}" )

#Ejercicio 9
celcius = float(input("Ingrese la temperatura en grados Celcius:"))

fahrenheit = (9/5) * celcius + 32

print(f"{celcius}°C equivalen a {fahrenheit:.2f}°F")

#Ejercicio 10
numero1 = float(input("Ingrese el primer numero: "))
numero2 = float(input("Ingrese el sgundo numero: "))
numero3 = float (input("Ingrese el tercer numero: "))

promedio = (numero1 + numero2 + numero3) / 3

print(f"El promedio de {numero1}, {numero2}, {numero3} es: {promedio:.2f}")